generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Property {
  id           String  @id @default(uuid())
  title        String
  category     String
  description  String
  address      String
  neighborhood String
  price        Decimal
  size         Int
  bathroom     Int
  bedroom      Int
  garage       Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
